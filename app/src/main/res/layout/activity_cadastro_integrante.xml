<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CadastroIntegranteActivity"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:id="@+id/textNomeAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway_extrabold"
        android:padding="10dp"
        android:text="Nome" />

    <EditText
        android:id="@+id/inputNomeAluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/raleway_medium"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textAlunoRA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway_extrabold"
        android:padding="10dp"
        android:text="RA" />

    <EditText
        android:id="@+id/inputAlunoRA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/raleway_medium"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textAlunoEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway_extrabold"
        android:padding="10dp"
        android:text="E-mail" />

    <EditText
        android:id="@+id/inputAlunoEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/raleway_medium"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textAlunoTurma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway_extrabold"
        android:padding="10dp"
        android:text="Turma" />

    <EditText
        android:id="@+id/inputAlunoTurma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/raleway_medium"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <Button
        android:id="@+id/buttonAddOutro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway_extrabold"
        android:padding="10dp"
        android:text="Adicionar outro" />

    <Button
        android:id="@+id/buttonFinalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/raleway_extrabold"
        android:padding="10dp"
        android:text="Finalizar" />
</LinearLayout>
</ScrollView>
</LinearLayout>
